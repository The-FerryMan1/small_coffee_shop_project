{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
      
    },
    "db:push": {
      "inputs": [
        "apps/api/drizzle.config.ts", 
        "apps/api/src/db/schema.ts",
        "apps/api/.env*" 
      ],
      "outputs": [] 
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
